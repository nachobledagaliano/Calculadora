<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/button21"
            android:layout_width="107dp"
            android:layout_height="match_parent"
            android:background="@android:color/darker_gray"
            android:onClick="limpiar"
            android:text="C"/>

        <TextView
            android:id="@+id/pantalla"
            android:layout_width="390dp"
            android:layout_height="match_parent"
            android:gravity="bottom|right"
            android:hint="0"
            android:textSize="36sp"/>

        <ImageButton
            android:id="@+id/button23"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@android:color/darker_gray"
            android:onClick="borrar"
            android:text="Button"
            app:srcCompat="@android:drawable/ic_input_delete"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <TableLayout
            android:layout_width="320dp"
            android:layout_height="match_parent"
            android:stretchColumns="0,1,2">

            <TableRow
                android:id="@+id/rowDF"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="invisible">

                <Button
                    android:id="@+id/btn_D"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@android:color/background_light"
                    android:onClick="numero"
                    android:text="D"
                    android:visibility="visible"/>

                <Button
                    android:id="@+id/btn_E"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@android:color/background_light"
                    android:onClick="numero"
                    android:text="E"
                    android:visibility="visible"/>

                <Button
                    android:id="@+id/btn_F"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@android:color/background_light"
                    android:onClick="numero"
                    android:text="F"
                    android:visibility="visible"/>

            </TableRow>

            <TableRow
                android:id="@+id/rowAC"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="invisible">

                <Button
                    android:id="@+id/btn_A"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@android:color/background_light"
                    android:onClick="numero"
                    android:text="A"
                    android:visibility="visible"/>

                <Button
                    android:id="@+id/btn_B"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@android:color/background_light"
                    android:onClick="numero"
                    android:text="B"
                    android:visibility="visible"/>

                <Button
                    android:id="@+id/btn_C"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@android:color/background_light"
                    android:onClick="numero"
                    android:text="C"
                    android:visibility="visible"/>

            </TableRow>

            <TableRow
                android:id="@+id/row79"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <Button
                    android:id="@+id/btn_7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@android:color/background_light"
                    android:onClick="numero"
                    android:text="7"/>

                <Button
                    android:id="@+id/btn_8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@android:color/background_light"
                    android:onClick="numero"
                    android:text="8"/>

                <Button
                    android:id="@+id/btn_9"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@android:color/background_light"
                    android:onClick="numero"
                    android:text="9"/>

            </TableRow>

            <TableRow
                android:id="@+id/row46"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <Button
                    android:id="@+id/btn_4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@android:color/background_light"
                    android:onClick="numero"
                    android:text="4"/>

                <Button
                    android:id="@+id/btn_5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@android:color/background_light"
                    android:onClick="numero"
                    android:text="5"/>

                <Button
                    android:id="@+id/btn_6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@android:color/background_light"
                    android:onClick="numero"
                    android:text="6"/>

            </TableRow>

            <TableRow android:id="@+id/row13">

                <Button
                    android:id="@+id/btn_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@android:color/background_light"
                    android:onClick="numero"
                    android:text="1"/>

                <Button
                    android:id="@+id/btn_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@android:color/background_light"
                    android:onClick="numero"
                    android:text="2"/>

                <Button
                    android:id="@+id/btn_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@android:color/background_light"
                    android:onClick="numero"
                    android:text="3"/>

            </TableRow>

            <TableRow android:id="@+id/row0">

                <Button
                    android:id="@+id/button47"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@android:color/darker_gray"
                    android:onClick="numero"
                    android:text="."/>

                <Button
                    android:id="@+id/btn_0"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@android:color/background_light"
                    android:onClick="numero"
                    android:text="0"/>

                <Button
                    android:id="@+id/button40"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@android:color/darker_gray"
                    android:onClick="calcularR"
                    android:text="="/>

            </TableRow>
        </TableLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <Button
                    android:id="@+id/button58"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@android:color/darker_gray"
                    android:onClick="operacion"
                    android:text="+"/>

                <Button
                    android:id="@+id/button55"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@android:color/darker_gray"
                    android:onClick="operacion"
                    android:text="-"/>

                <Button
                    android:id="@+id/button56"
                    android:layout_width="match_parent"
                    android:layout_height="73dp"
                    android:layout_weight="1"
                    android:background="@android:color/darker_gray"
                    android:onClick="operacion"
                    android:text="/"/>

                <Button
                    android:id="@+id/button57"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@android:color/darker_gray"
                    android:onClick="operacion"
                    android:text="*"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:orientation="vertical">

                <Button
                    android:id="@+id/button59"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@android:color/darker_gray"
                    android:onClick="binario"
                    android:text="@string/binario"/>

                <Button
                    android:id="@+id/button60"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@android:color/darker_gray"
                    android:onClick="decimal"
                    android:text="@string/decimal"/>

                <Button
                    android:id="@+id/button61"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@android:color/darker_gray"
                    android:onClick="hexadecimal"
                    android:text="@string/hexdecimal"/>
            </LinearLayout>

        </RelativeLayout>

    </LinearLayout>

</LinearLayout>